int ledPin=13;
int sensorPin=7;
boolean button=0; 


void setup(){
  pinMode(ledPin, OUTPUT);
  pinMode(buttonPin, INPUT);
  Serial.begin (9600);
}

void loop() {
  
  weightSensor()
}
  
void weightSensor() {
  
  button = digitalRead(buttonPin); 
  
  delay(200)

    if (button==HIGH) {
      digitalWrite(ledPin, High)
  }
    

    else {
      digitalWrite(ledPin, Low)
}
